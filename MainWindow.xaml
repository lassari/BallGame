<Window x:Class="BallGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BallGame"
        mc:Ignorable="d"
        Title="-- Ball Game --" Height="450" Width="800">
    <Grid>
        <Button Content="Start / Stop"  HorizontalAlignment="Left" Name ="StartStopButton" Margin="27,60,0,0" VerticalAlignment="Top" Click="StartStopButton_Click"/>
        <Canvas Margin="135,0,0,0"  Name="Playground" Background="AliceBlue">
            <Ellipse x:Name="Ball" Width="20" Height="20" Fill="Black" Canvas.Left="100" Canvas.Top="100">
                
            </Ellipse>
            
        </Canvas>
        
               


    </Grid>
</Window>
